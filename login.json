{
  "$jason": {
    "head": {
      "title": "tco_login",
      "description": "Login de Consorcio",
      "offline": "true",
      "actions": {
        "$load": {
          "type": "$global.reset",
          "items": [
            "user",
            "status"
          ]
        },
        "signin": {
          "type": "$network.request",
          "options": {
            "url": "https://app.tuconsorcio.com.ar/api/v2/login/{{ $get.usuario }}/{{ $get.password }}"
          },
          "success": {
            "type": "$global.set",
            "options": {
              "user": "{{ $jason.user }}",
              "status": "{{ $jason.status }}"
            },
            "success": {
              "type": "$href",
              "options": {
                "url": [
                  {
                    "{{ #if $global.user }}": "https://www.jasonbase.com/things/B16d"
                  },
                  {
                    "{{ #else }}": "https://www.jasonbase.com/things/YAWJ"
                  }
                ]
              }
            }
          },
          "error": {
            "type": "$util.alert",
            "options": {
              "title": "Error",
              "description": "{{JSON.stringify($jason)}}"
            }
          }
        }
      }
    },
    "body": {
      "sections": [
        {
          "items": [
            {
              "type": "space",
              "style": {
                "background": "#FFFFFF",
                "border": "none",
                "height": "30"
              }
            },
            {
              "type": "vertical",
              "style": {
                "background": "#ffffff",
                "align": "center",
                "padding": "20"
              },
              "components": [
                {
                  "type": "image",
                  "url": "https://app.tuconsorcio.com.ar/img/logo-violeta-01.png",
                  "style": {
                    "border": "#FFFFFF",
                    "width": "170"
                  }
                },
                {
                  "type": "label",
                  "text": "tuconsorcio.com.ar",
                  "style": {
                    "align": "center",
                    "font": "HelveticaNeue",
                    "color": "#6B297E",
                    "size": "22",
                    "height": "50"
                  }
                }
              ]
            },
            {
              "type": "vertical",
              "style": {
                "background": "#FFFFFF",
                "border": "#FFFFFF"
              },
              "components": [
                {
                  "type": "textfield",
                  "name": "usuario",
                  "placeholder": "Usuario",
                  "style": {
                    "background": "#FFFFFF",
                    "color": "#CCCCCC",
                    "font": "HelveticaNeue",
                    "size": "20",
                    "padding": "20"
                  }
                },
                {
                  "type": "space",
                  "height": "30"
                },
                {
                  "type": "textfield",
                  "name": "password",
                  "placeholder": "Contrase√±a",
                  "style": {
                    "background": "#FFFFFF",
                    "color": "#CCCCCC",
                    "font": "HelveticaNeue",
                    "size": "20",
                    "secure": "true",
                    "border": "#FFFFFF",
                    "padding": "20"
                  }
                }
              ]
            },
            {
              "type": "vertical",
              "style": {
                "background": "#FFFFFF",
                "border": "#FFFFFF",
                "padding": "20"
              },
              "components": [
                {
                  "type": "button",
                  "text": "Entrar",
                  "style": {
                    "align": "center",
                    "size": "20",
                    "font": "HelveticaNeue",
                    "background": "#6B297E",
                    "padding": "20",
                    "color": "#FFFFFF",
                    "corner_radius": "10"
                  },
                  "action": {
                    "trigger": "signin"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
