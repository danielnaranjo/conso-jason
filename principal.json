{
  "$jason": {
    "head": {
      "title": "tco_Principal",
      "description": "Formas de pago y encargados",
      "offline": "true",
      "agents": {
        "simple": {
          "url": "file://pusher.html"
        }
      },
      "styles": {
        "androide": {
          "height": "100"
        },
        "iose": {
          "height": "150"
        }
      },
      "actions": {
        "$pull": {
          "trigger": "fetch"
        },
        "$foreground": {
          "trigger": "fetch"
        },
        "$show": {
          "trigger": "fetch"
        },
        "$load": {
          "trigger": "fetch"
        },
        "fetch": {
          "type": "$network.request",
          "options": {
            "url": "https://app.tuconsorcio.com.ar/api/v2/consorcio/{{ $global.user }}"
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.alert",
            "options": {
              "title": "debug",
              "description": "{{JSON.stringify($jason)}}"
            }
          }
        },
        "banner": {
          "type": "$util.alert",
          "options": {
            "title": "Novedades",
            "description": "{{$jason.message}}"
          }
        }
      },
      "templates": {
        "body": {
          "style": {
            "border": "none"
          },
          "header": {
            "title": "{{ $jason.user.con_nombre }}",
            "style": {
              "background": "#6B297E",
              "color": "#FFFFFF",
              "padding": "20"
            },
            "menu": {
              "text": "Cerrar",
              "style": {
                "color": "#FFFFFF",
                "padding": "10"
              },
              "action": {
                "type": "$util.alert",
                "options": {
                  "title": "Has cerrado la sesi√≥n",
                  "description": "Gracias por utilizar tuconsorcio.com.ar"
                },
                "success": {
                  "type": "$href",
                  "options": {
                    "url": "https://www.jasonbase.com/things/xDBD"
                  },
                  "success": {
                    "type": "$global.reset",
                    "items": [
                      "user",
                      "status"
                    ]
                  }
                }
              }
            }
          },
          "footer": {
            "tabs": {
              "style": {
                "background": "#6B297E",
                "color": "#FFFFFF"
              },
              "items": [
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/home.png",
                  "text": "Home",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/B16d"
                },
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/expensas.png",
                  "text": "Expensas",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/jjEa"
                },
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/avisos.png",
                  "text": "Avisos",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/gzLn"
                },
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/utiles.png",
                  "text": "Contactos",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/LZPJ"
                },
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/calendario.png",
                  "text": "Eventos",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/zng1"
                }
              ]
            }
          },
          "sections": [
            {
              "items": [
                {
                  "type": "horizontal",
                  "style": {
                    "align": "left",
                    "background": "#461D58",
                    "spacing": "10"
                  },
                  "components": [
                    {
                      "type": "image",
                      "style": {
                        "width": "100",
                        "height": "100"
                      },
                      "url": [
                        {
                          "{{#if $jason.user.inm_logo==''}}": "https://app.tuconsorcio.com.ar/uploads/1_1515179772.jpeg"
                        },
                        {
                          "{{#else $jason.user.inm_logo!=''}}": "https://app.tuconsorcio.com.ar/uploads/{{ $jason.user.inm_logo }}"
                        }
                      ]
                    },
                    {
                      "type": "vertical",
                      "style": {
                        "align": "left",
                        "background": "#461D58",
                        "spacing": "2"
                      },
                      "components": [
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_nombre }}",
                          "style": {
                            "color": "#FFFFFF",
                            "font": "HelveticaNeue-Bold",
                            "size": "16"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_direccion }}",
                          "style": {
                            "color": "#FFFFFF"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_telefono }}",
                          "style": {
                            "color": "#FFFFFF"
                          },
                          "href": {
                            "url": "tel:{{ $jason.user.inm_telefono }}",
                            "view": "app"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_email }}",
                          "style": {
                            "color": "#FFFFFF"
                          },
                          "href": {
                            "url": "mailto:{{ $jason.user.inm_email }}",
                            "view": "app"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_web }}",
                          "style": {
                            "color": "#FFFFFF"
                          },
                          "href": {
                            "url": "{{ $jason.user.inm_web }}",
                            "view": "app"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "horizontal",
              "header": {
                "type": "horizontal",
                "style": {
                  "align": "left",
                  "background": "#FFFFFF",
                  "spacing": "10"
                },
                "components": [
                  {
                    "type": "label",
                    "text": "Forma(s) de Pago",
                    "style": {
                      "color": "#461D58",
                      "font": "HelveticaNeue-Bold",
                      "size": "18"
                    }
                  }
                ]
              }
            },
            {
              "type": "vertical",
              "items": {
                "{{#each $jason.payments}}": {
                  "type": "vertical",
                  "style": {
                    "align": "left",
                    "background": "#FFFFFF",
                    "padding": "10"
                  },
                  "components": [
                    {
                      "type": "label",
                      "text": "{{ for_tipo }}",
                      "style": {
                        "font": "HelveticaNeue-Bold",
                        "size": "16"
                      }
                    },
                    {
                      "type": "label",
                      "text": "{{ function() { return for_informacion.replace(/<.+?>/g, ''); }() }}"
                    }
                  ]
                }
              }
            },
            {
              "type": "vertical",
              "header": {
                "type": "vertical",
                "style": {
                  "align": "left",
                  "background": "#FFFFFF",
                  "spacing": "10"
                },
                "components": [
                  {
                    "type": "label",
                    "text": "Encargado(s)",
                    "style": {
                      "color": "#461D58",
                      "font": "HelveticaNeue-Bold",
                      "size": "18"
                    }
                  }
                ]
              }
            },
            {
              "type": "vertical",
              "items": {
                "{{#each $jason.staffs}}": {
                  "type": "vertical",
                  "style": {
                    "padding": "10",
                    "background": "#ffffff"
                  },
                  "components": [
                    {
                      "type": "label",
                      "text": "{{enc_nombre}}",
                      "style": {
                        "font": "HelveticaNeue-Bold",
                        "size": "16"
                      }
                    },
                    {
                      "type": "label",
                      "text": "{{enc_telefono}}",
                      "href": {
                        "url": "tel:{{enc_telefono}}",
                        "view": "app"
                      }
                    },
                    {
                      "type": "label",
                      "text": "Horario laboral: {{enc_horario}}"
                    }
                  ]
                }
              }
            },
            {
              "type": "horizontal",
              "header": {
                "type": "horizontal",
                "style": {
                  "align": "left",
                  "background": "#FFFFFF",
                  "spacing": "10"
                },
                "components": [
                  {
                    "type": "label",
                    "text": "Amenities",
                    "style": {
                      "color": "#461D58",
                      "font": "HelveticaNeue-Bold",
                      "size": "18"
                    }
                  }
                ]
              }
            },
            {
              "type": "vertical",
              "items": {
                "{{#each $jason.amenities}}": {
                  "type": "vertical",
                  "style": {
                    "padding": "10",
                    "background": "#ffffff"
                  },
                  "components": [
                    {
                      "type": "label",
                      "text": "{{ ame_amenities }}",
                      "style": {
                        "font": "HelveticaNeue-Bold",
                        "size": "16"
                      }
                    },
                    {
                      "type": "label",
                      "text": "Horario: {{ ame_horario }}"
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}
