{
  "$jason": {
    "head": {
      "title": "Principal",
      "actions": {
        "$pull": {
          "trigger": "fetch"
        },
        "$foreground": {
          "trigger": "fetch"
        },
        "$show": {
          "trigger": "fetch"
        },
        "$load": {
          "trigger": "fetch"
        },
        "fetch": {
          "type": "$network.request",
          "options": {
            "url": "https://app.tuconsorcio.com.ar/api/v2/consorcio/{{ $global.user }}"
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.alert",
            "options": {
              "title": "debug",
              "description": "{{JSON.stringify($jason)}}"
            }
          }
        },
        "cerrar": {
          "type": "$global.reset",
          "items": [
            "user",
            "status"
          ],
          "success": {
            "type": "$href",
            "options": {
              "url": "https://www.jasonbase.com/things/xDBD"
            }
          }
        }
      },
      "templates": {
        "body": {
          "style": {
            "border": "none"
          },
          "header": {
            "title": "{{ $jason.user.con_nombre }}",
            "style": {
              "background": "#6B297E",
              "color": "#FFFFFF",
              "padding": "20"
            },
            "menu": {
              "text": "Cerrar",
              "style": {
                "color": "#FFFFFF"
              },
              "action": {
                "trigger": "cerrar"
              }
            }
          },
          "footer": {
            "tabs": {
              "style": {
                "background": "#6B297E",
                "color": "#FFFFFF"
              },
              "items": [
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/home.png",
                  "text": "Home",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/B16d"
                },
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/expensas.png",
                  "text": "Expensas",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/jjEa"
                },
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/avisos.png",
                  "text": "Avisos",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/gzLn"
                },
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/utiles.png",
                  "text": "Contactos",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/LZPJ"
                },
                {
                  "image": "https://app.tuconsorcio.com.ar/img/icons/calendario.png",
                  "text": "Eventos",
                  "style": {
                    "height": "21"
                  },
                  "url": "https://www.jasonbase.com/things/zng1"
                }
              ]
            }
          },
          "sections": [
            {
              "items": [
                {
                  "type": "horizontal",
                  "style": {
                    "align": "left",
                    "background": "#461D58",
                    "spacing": "10"
                  },
                  "components": [
                    {
                      "type": "image",
                      "style": {
                        "width": "100",
                        "height": "100"
                      },
                      "url": [
                        {
                          "{{#if $jason.user.inm_logo==''}}": "https://app.tuconsorcio.com.ar/uploads/1_1515179772.jpeg"
                        },
                        {
                          "{{#else $jason.user.inm_logo!=''}}": "https://app.tuconsorcio.com.ar/uploads/{{ $jason.user.inm_logo }}"
                        }
                      ]
                    },
                    {
                      "type": "vertical",
                      "style": {
                        "align": "left",
                        "background": "#461D58",
                        "spacing": "2"
                      },
                      "components": [
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_nombre }}",
                          "style": {
                            "color": "#FFFFFF",
                            "font": "HelveticaNeue-Bold",
                            "size": "18"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_direccion }}",
                          "style": {
                            "color": "#FFFFFF"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_telefono }}",
                          "style": {
                            "color": "#FFFFFF"
                          },
                          "href": {
                            "url": "tel:{{ $jason.user.inm_telefono }}",
                            "view": "app"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_email }}",
                          "style": {
                            "color": "#FFFFFF"
                          },
                          "href": {
                            "url": "mailto:{{ $jason.user.inm_email }}",
                            "view": "app"
                          }
                        },
                        {
                          "type": "label",
                          "text": "{{ $jason.user.inm_web }}",
                          "style": {
                            "color": "#FFFFFF"
                          },
                          "href": {
                            "url": "{{ $jason.user.inm_web }}",
                            "view": "app"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "horizontal",
              "header": {
                "type": "horizontal",
                "style": {
                  "align": "left",
                  "background": "#FFFFFF",
                  "spacing": "10"
                },
                "components": [
                  {
                    "type": "label",
                    "text": "Encargado(s)",
                    "style": {
                      "padding": "5"
                    }
                  }
                ]
              }
            },
            {
              "type": "horizontal",
              "items": {
                "{{#each $jason.staffs}}": {
                  "type": "vertical",
                  "style": {
                    "width": "32%",
                    "padding": "10",
                    "background": "#ffffff",
                    "align": "center",
                    "height": "150"
                  },
                  "components": [
                    {
                      "type": "image",
                      "url": "https://app.tuconsorcio.com.ar/img/avatar.png",
                      "action": {
                        "type": "$util.alert",
                        "options": {
                          "title": "Horario laboral",
                          "description": "{{enc_horario}}"
                        }
                      }
                    },
                    {
                      "type": "label",
                      "text": "{{enc_nombre}}"
                    },
                    {
                      "type": "label",
                      "text": "{{enc_telefono}}",
                      "href": {
                        "url": "tel:{{enc_telefono}}",
                        "view": "app"
                      }
                    }
                  ]
                }
              }
            },
            {
              "type": "horizontal",
              "header": {
                "type": "horizontal",
                "style": {
                  "align": "left",
                  "background": "#461D58",
                  "spacing": "10"
                },
                "components": [
                  {
                    "type": "label",
                    "text": "Forma de Pago",
                    "style": {
                      "color": "#FFFFFF"
                    }
                  }
                ]
              }
            },
            {
              "type": "vertical",
              "items": {
                "{{#each $jason.payments}}": {
                  "type": "vertical",
                  "style": {
                    "align": "left",
                    "background": "#FFFFFF",
                    "spacing": "10"
                  },
                  "components": [
                    {
                      "type": "label",
                      "text": "{{ for_tipo }}"
                    },
                    {
                      "type": "label",
                      "text": "{{ for_informacion }}"
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}
